{
  "name": "fe-theme",
  "version": "3.0.0",
  "description": "FE theme",
  "dependencies": {},
  "devDependencies": {
    "node-sass": "latest",
    "jshint": "latest",
    "uglifyjs": "latest",
    "onchange": "latest",
    "concurrently": "latest"
  },
  "scripts": {
    "sass": "node-sass --recursive sass/styles.scss --include-path sass --output css_js --output-style compressed",
    "sass-watch": "onchange 'sass' -v -- npm run sass",
    "lint": "jshint js_src",
    "lint-watch": "onchange 'js_src/**/*.js' -v -- npm run lint",
    "uglify": "uglifyjs js_src/*.js -o css_js/script.js",
    "uglify-watch": "onchange 'js_src/**/*.js' -v -- npm run uglify",
    "watch": "concurrently --kill-others 'npm run sass-watch' 'npm run lint-watch' 'npm run uglify-watch'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orlinbox/fe-theme.git"
  },
  "license": "MIT"
}
